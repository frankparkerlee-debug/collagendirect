<script>
document.getElementById('year').textContent=new Date().getFullYear();
document.getElementById('menuBtn').addEventListener('click',()=>{
  document.documentElement.classList.toggle('mobile-open');
});

/* Products */
const PRODUCTS=[{id:'matrix-2x2',name:'Collagen Matrix 2×2',img:'/assets/collagen-matrix-2x2.png',category:'matrix',specs:['Sheet','2×2 in'],desc:'Sheet matrix for DFU/VLU & pressure ulcers.'},
{id:'matrix-3x3',name:'Collagen Matrix 3×3',img:'/assets/collagen-matrix-3x3.png',category:'matrix',specs:['Sheet','3×3 in'],desc:'Absorbent matrix supporting epithelialization.'},
{id:'matrix-4x4',name:'Collagen Matrix 4×4',img:'/assets/collagen-matrix-4x4.png',category:'matrix',specs:['Sheet','4×4 in'],desc:'Larger coverage for exuding wounds.'},
{id:'powder-1g',name:'Collagen Powder 1 g',img:'/assets/collagen-powder-1g.png',category:'powder',specs:['Powder','1 g'],desc:'Maintains moist wound environment for granulation.'},
{id:'powder-3g',name:'Collagen Powder 3 g',img:'/assets/collagen-powder-3g.png',category:'powder',specs:['Powder','3 g'],desc:'Higher volume for large or tunneling wounds.'},
{id:'ag-2x2',name:'Antimicrobial Collagen 2×2',img:'/assets/collagen-silver-2x2.png',category:'antimicrobial',specs:['Silver-composite','2×2 in'],desc:'Silver-infused collagen for bioburden management.'},
{id:'ag-4x4',name:'Antimicrobial Collagen 4×4',img:'/assets/collagen-silver-4x4.png',category:'antimicrobial',specs:['Silver-composite','4×4 in'],desc:'Larger silver-collagen composite for infected/exuding wounds.'},
{id:'ag-powder-1g',name:'Antimicrobial Collagen Powder 1 g',img:'/assets/collagen-silver-powder-1g.png',category:'antimicrobial',specs:['Silver-composite','Powder 1 g'],desc:'Conforms to irregular topography; assists with bioburden.'},];
const grid=document.getElementById('grid');
function card(p){return `<article class="card prod" data-cat="${p.category}">
<img class="poster" loading="lazy" src="${p.img}" alt="${p.name}">
<div class="body">
<h3>${p.name}</h3>
<p class="muted" style="margin-top:4px">${p.desc}</p>
<div class="row">${p.specs.map(s=>`<span class="pill">${s}</span>`).join('')}</div>
<div class="bottom">
<a class="btn primary" href="/portal">Order</a>
<a class="btn ghost" href="/register">Get Pricing</a>
</div></div></article>`}
function render(list){grid.innerHTML=list.map(card).join('')}
render(PRODUCTS);
document.querySelectorAll('.filter').forEach(b=>b.addEventListener('click',()=>{
  document.querySelectorAll('.filter').forEach(x=>{x.classList.remove('active');});
  b.classList.add('active');
  const f=b.dataset.filter;
  render(f==='all'?PRODUCTS:PRODUCTS.filter(p=>p.category===f));
}));
</script>
