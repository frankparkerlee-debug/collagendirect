<script>
(function(){
  const isSmall = window.matchMedia("(max-width: 768px)").matches;
  const ua = navigator.userAgent.toLowerCase();
  const isMobileUA = /iphone|android|ipad|ipod|mobile/.test(ua);
  if((isSmall || isMobileUA) && !location.pathname.includes("products.mobile")){
    location.replace("/products.mobile.html");
  }
})();
</script>

