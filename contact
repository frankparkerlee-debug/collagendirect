  <script>
    // Mobile menu toggle
    (function(){
      const btn = document.getElementById('menuBtn');
      if(!btn) return;
      btn.addEventListener('click', ()=>{
        const open = document.documentElement.classList.toggle('mobile-open');
        btn.setAttribute('aria-expanded', open ? 'true' : 'false');
      });
    })();

    // Simple form handler (client-side only)
    const f = document.getElementById('contact-form');
    const note = document.getElementById('form-note');
    f?.addEventListener('submit', (e) => {
      e.preventDefault();
      if(!f.checkValidity()){
        note.textContent = 'Please complete the required fields (email + message).';
        note.style.color = '#b42318';
        return;
      }
      note.textContent = 'Thanks! We received your message and will follow up shortly.';
      note.style.color = '#0b5f56';
      f.reset();
    });

    // Year
    document.getElementById('year').textContent = new Date().getFullYear();
  </script>
